DATASOURCES=TEST


# The "TEST" database
#
# Derby
TEST_DATABASE=my-db
TEST_DRIVER=derby
TEST_JNDI=java:jboss/datasources/DerbyDS
TEST_USERNAME=joe
TEST_PASSWORD=password
# _HOST and _PORT are required, but not used
TEST_SERVICE_PORT=1521
TEST_SERVICE_HOST=my-derby-host
TEST_TX_ISOLATION=TRANSACTION_READ_UNCOMMITTED
TEST_JTA=true
TEST_NONXA=false

# Connection info for xa datasource
ACCOUNTS_DERBY_XA_CONNECTION_PROPERTY_DatabaseName=/home/jboss/source/data/databases/derby/accounts




